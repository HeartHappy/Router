<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDED6A"
    tools:context=".RouterActivity">
    <FrameLayout
        android:id="@+id/fragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragmentLayout"
        android:textSize="20sp"
        android:text="I am module 1"
         />

    <Button
        android:id="@+id/btnUriJump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uri Jump to Module 2"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnJump"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnJump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jump to Module 2"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnJump3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btnJump3"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:text="Loader model Fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnJump4"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnJump4"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:text="Start Service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnJump5"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnJump5"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:text="Loader model Service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>